#!/usr/bin/env ruby
$: << File.expand_path('../src', File.dirname(__FILE__))
$0 = 'DaVaz'
require 'drb/drb'
require 'davaz'
require 'util/config'
require 'util/app'
require 'util/db_manager'

app = DaVaz::Util::App.new
SBSM.info msg = "Starting #{DaVaz.config.server_uri} yus at: #{DaVaz.config.yus_uri}"
puts msg

DRb.start_service(DaVaz.config.server_uri, app)
DRb.thread.join
